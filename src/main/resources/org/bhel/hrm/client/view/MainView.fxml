<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainPane" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.bhel.hrm.client.controller.MainController">

    <!-- LEFT: Vertical Navigation Bar -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
            <Label text="BHEL HRM">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>
            <Separator prefWidth="180.0"/>

            <!-- Navigation Buttons will be dynamically added here based on user role -->
            <VBox fx:id="navigationVBox" spacing="8.0"/>

            <Pane VBox.vgrow="ALWAYS"/> <!-- This pushes the logout button to the bottom -->

            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- CENTER: Main Content Area -->
    <center>
        <!-- This StackPane will hold the dynamically loaded pages -->
        <StackPane fx:id="contentArea" style="-fx-padding: 20;">
            <!-- A placeholder label -->
            <Label text="Welcome! Please select an option from the menu." />
        </StackPane>
    </center>

    <!-- BOTTOM: Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="status-bar"
              style="-fx-padding: 5; -fx-border-width: 1 0 0 0; -fx-border-color: #d0d0d0;">
            <Label text="Logged in as:"/>
            <Label fx:id="loggedInUserLabel" text="[Username]" style="-fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>
