<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<!-- This is a page, not a full window, so it uses a VBox as the root. -->
<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bhel.hrm.client.controllers.HRDashboardController">

    <!-- Include the reusable PageHeader component -->
    <fx:include source="components/PageHeader.fxml" fx:id="pageHeader"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search employees..." HBox.hgrow="ALWAYS"/>
        <Button text="Add New Employee" onAction="#handleAddEmployeeAction" styleClass="button-primary"/>
    </HBox>

    <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="150"/>
            <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="150"/>
            <TableColumn fx:id="icPassportColumn" text="IC/Passport" prefWidth="150"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
    </TableView>
</VBox>