<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bhel.hrm.client.controllers.EmployeeManagementController">

    <!-- Include the reusable PageHeader component -->
    <fx:include source="components/PageHeader.fxml" fx:id="pageHeader"/>

    <HBox alignment="CENTER_LEFT" spacing="10" >
        <TextField fx:id="searchField" promptText="Search employees by name or IC..." HBox.hgrow="ALWAYS"/>
        <Button fx:id="addNewButton" text="Add New Employee" onAction="#handleAddNewEmployee"
                styleClass="button-primary"/>
    </HBox>

    <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="150.0"/>
            <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="150.0"/>
            <TableColumn fx:id="icPassportColumn" text="IC/Passport" prefWidth="150.0"/>
            <!-- TODO: Add new columns for Edit/Delete action buttons later -->
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/></columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="editButton" text="Edit Selected " onAction="#handleEditSelectedEmployee"/>
        <Button fx:id="deleteButton" text="Delete Selected " onAction="#handleDeleteSelectedEmployee"
                style="-fx-background-color: #f8d7da;"/>
    </HBox>
</VBox>