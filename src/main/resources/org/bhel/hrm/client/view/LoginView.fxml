<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" vgap="15" style="-fx-background-color: #f4f4f4;"
          xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.bhel.hrm.client.controllers.LoginController">

    <padding>
        <Insets top="40" left="40" right="40" bottom="40"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0"/>
    </columnConstraints>

    <Label text="BHEL Human Resource Management"
           GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"
           styleClass="login-title">
        <GridPane.margin>
            <Insets bottom="20"/>
        </GridPane.margin>

    </Label>

    <Label text="Username: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" promptText="Enter your username"
               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Password: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="Enter your password"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button onAction="#handleLoginButtonAction" text="Log In"
            GridPane.rowIndex="3" GridPane.columnIndex="1"
            maxWidth="Infinity"
            defaultButton="true" styleClass="button-primary"/>

    <!-- This label will display error messages -->
    <Label fx:id="errorLabel" textFill="red"
           GridPane.rowIndex="4" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <GridPane.margin>
            <Insets top="10"/>
        </GridPane.margin>
    </Label>
</GridPane>

