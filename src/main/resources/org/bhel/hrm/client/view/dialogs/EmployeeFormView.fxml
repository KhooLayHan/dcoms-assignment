<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" style="-fx-padding:20;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bhel.hrm.client.controllers.EmployeeFormController">

    <Label fx:id="titleLabel" text="Add New Employee">
        <font><Font name="System Bold" size="18.0"/></font>
    </Label>

    <GridPane hgap="10" vgap="10">
        <Label text="Username: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Password: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Role: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="roleComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity"/>

        <Separator GridPane.rowIndex="3" GridPane.columnSpan="2">
            <padding><Insets top="10" bottom="10"/></padding>
        </Separator>

        <!-- Employee Profile Details -->
        <Label text="First Name: " GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" promptText="Enter First Name"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Last Name: " GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField" promptText="Enter Last Name"
                   GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="IC/Passport: " GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="icPassportField" promptText="123456-78-9012"
                   GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Cancel" onAction="#handleCancel" cancelButton="true"/>
        <Button text="Save" onAction="#handleSave" defaultButton="true" styleClass="button-primary"/>
    </HBox>
</VBox>